if !isPage
  .replymode Reply to thread
div#postbox.postarea
  form#postform.postform(
    action=`/form/post/`
    method='post'
    enctype='multipart/form-data'
  )
    input(
      name='board'
      value=board.uri
      type='hidden'
    )
    input(
      name='replythread'
      value=thread ? thread.postId : 0
      type='hidden'
    )
    input(
      name='MAX_FILE_SIZE'
      value=board.maxFileSize
      type='hidden'
    )
    input(
      name='email'
      style={ display: 'none' }
      type='text'
    )
    table.postform
      if !board.isForcedAnon
        //- div.form-row
        tr
          //- div.form-col
          td.postblock
            label(for='name-input').form-label Name
          //- div.form-col
          td
            input#name-input.from-input(
              name='name'
              size='28'
              maxlength='75'
              accesskey='n'
              type='text'
              placeholder=board.defaultPosterName
            )
        //- div.form-row
        tr(class='hidden')
          //- div.form-col
          td.postblock
            label(for='link-input').form-label Email
          //- div.form-col
          td
            input#link-input.from-input(
              name='em'
              size='28'
              maxlength='75'
              accesskey='n'
              type='text'
            )
      if board.enableCaptcha
        //- div.form-row
        tr
          //- div.form-col
          td.postblock
            label(for='captcha-input').form-label Capthca
          //- div.form-col
          td
            input#captcha-input.from-input(
              name='captcha'
              size='28'
              maxlength='64'
              accesskey='c'
              type='text'
            )
      //- div.form-row
      tr
        //- div.form-col
        td.postblock
          label(for='subject-input').form-label Subject
        //- div.form-col
        td
          input#subject-input.from-input(
            name='subject'
            size='35'
            maxlength='75'
            accesskey='s'
            type='text'
          )
          input(
            type='submit'
            value='Submit'
            accesskey='z'
          )
          //- small.posttypeindicator
            span#posttypeindicator
              if thread
                |(reply to #{ thread.postId })
              else
                |(new thread)
      //- div.form-row
      tr
        //- div.form-col
        td.postblock
          label(for='message-input').form-label Message
        //- div.form-col
        td
          textarea#message-input.from-input(
            name='message'
            cols='38'
            rows='4'
            accesskey='m'
          )
          div#resizer
      //- div.form-row
      tr
        //- div.form-col
        td.postblock
          label(for='imagefile-input').form-label File
        //- div.form-col
        td
          input#imagefile-input.from-input(
            name='imagefile'
            size='35'
            accesskey='f'
            type='file'
          )
      //- div.form-row
      tr
        //- div.form-col
        td.postblock
          label(for='postpassword-input').form-label Password
        //- div.form-col
        td
          input#postpassword-input.from-input(
            name='postpassword'
            size='8'
            accesskey='p'
            type='password'
          )
      //- div.form-row
      tr
        //- div.form-col
        td.postblock
          label.form-label Options
        //- div.form-col
        td
          div.form-input-group
            if board.enableSage && !isPage
              span.link-button-wrapper
                input#sage(name='sage', type='checkbox')
                label(for='sage') säge
              | 
            span.link-button-wrapper
              input#noko(name='postredir', value='1', type='checkbox')
              label(for='noko') nöko
      tr
        td.rules(colspan='2')
